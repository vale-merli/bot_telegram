import os
import requests
import time
import asyncio
from telegram import Bot

# Usa le variabili d'ambiente invece di scriverle nel codice
TELEGRAM_BOT_TOKEN = os.getenv("TELEGRAM_BOT_TOKEN")
CHAT_ID = os.getenv("CHAT_ID")

if not TELEGRAM_BOT_TOKEN or not CHAT_ID:
    raise ValueError("Le variabili d'ambiente TELEGRAM_BOT_TOKEN e CHAT_ID devono essere impostate.")

bot = Bot(token=TELEGRAM_BOT_TOKEN)

# API di CoinGecko per ottenere il prezzo di Pi Network
COINGECKO_API_URL = "https://api.coingecko.com/api/v3/simple/price?ids=pi-network&vs_currencies=usd"

last_price = None  # Memorizza l'ultimo prezzo registrato
THRESHOLD = 0.10  # 10% di variazione

async def send_telegram_message(msg_text):
    """Invia un messaggio al gruppo Telegram in modo asincrono."""
    try:
        await bot.send_message(chat_id=CHAT_ID, text=msg_text)
    except Exception as e:
        print(f"Errore nell'invio del messaggio: {e}")

def get_pi_price():
    """Ottiene il prezzo attuale di Pi Network da CoinGecko."""
    try:
        response = requests.get(COINGECKO_API_URL)
        response.raise_for_status()
        data = response.json()
        return data.get("pi-network", {}).get("usd")
    except Exception as e:
        print(f"Errore nel recupero del prezzo: {e}")
        return None

async def main():
    global last_price
    while True:
        current_price = get_pi_price()
        if current_price is not None:
            if last_price is None:
                last_price = current_price
            
            variation = (current_price - last_price) / last_price
            variation_percent = variation * 100
            trend = "📈 Aumento" if variation > 0 else "📉 Diminuzione"
            
            if abs(variation) >= THRESHOLD:
                msg_text = f"⚠️ {trend} del prezzo di Pi Network!\n\n💰 Prezzo attuale: ${current_price:.4f}\n📊 Variazione: {variation_percent:.2f}%"
                await send_telegram_message(msg_text)
                last_price = current_price  # Aggiorna il prezzo registrato

        await asyncio.sleep(60)  # Controlla il prezzo ogni minuto

if __name__ == "__main__":
    asyncio.run(main())
